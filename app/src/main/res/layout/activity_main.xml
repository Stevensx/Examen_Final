<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imagenResultado"
        android:layout_width="375dp"
        android:layout_height="341dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toTopOf="@+id/botonEscanear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/Resultado"
        android:layout_width="367dp"
        android:layout_height="83dp"
        android:layout_marginBottom="28dp"
        android:text="Selecciona una foto para identificar"
        android:textAlignment="center"
        android:textColor="@color/teal_700"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/imagenResultado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/botonEscanear"
        android:layout_width="373dp"
        android:layout_height="75dp"
        android:layout_marginBottom="32dp"
        android:text="Identificar Jugador"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/botonCaptura"
        android:layout_width="133dp"
        android:layout_height="59dp"
        android:layout_marginStart="48dp"
        android:text="CAMERA"
        app:layout_constraintBottom_toTopOf="@+id/Resultado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.752" />

    <Button
        android:id="@+id/botonSeleccionar"
        android:layout_width="133dp"
        android:layout_height="59dp"

        android:layout_marginEnd="48dp"
        android:text="GalerÃ­a"
        app:layout_constraintBottom_toTopOf="@+id/Resultado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.752" />

</androidx.constraintlayout.widget.ConstraintLayout>